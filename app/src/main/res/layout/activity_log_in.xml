<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212F3C"
    tools:context="com.example.rafi_pc.railwaysystem.LogInActivity">

    <ImageView
        android:id="@+id/app_logo_log_in_screen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_train"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <EditText
        android:id="@+id/edit_text_phone_number_log_in_screen"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_action_phone"
        android:inputType="phone"
        android:textSize="16sp"
        android:background="@drawable/edittext_rectangle_round_corner"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app_logo_log_in_screen"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/edit_text_password_log_in_screen"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_lock"
        android:background="@drawable/edittext_rectangle_round_corner"
        android:layout_marginTop="5dp"
        android:layout_below="@id/edit_text_phone_number_log_in_screen"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_password_log_in_screen"
        android:text="Log In"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rectangle_round_corner"
        android:textColor="#F4F6F7"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_marginTop="5dp"/>
    <ProgressBar
        android:id="@+id/progress_bar_log_in"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_text_password_log_in_screen"
        android:layout_marginTop="20dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/textview_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#F4F6F7"
        android:text="Forget Password?"
        android:layout_below="@+id/button_log_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textview_dont_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#F4F6F7"
        android:text="Don't have an account yet?"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_sign_up"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creat a new profile"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:background="@drawable/button_rectangle_round_corner"
        android:textColor="#F4F6F7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
